<h3>Ledgers list</h3>

<table class="table table-condensed table-bordered">
  <thead>
    <tr>
      <th> <div align="center">Name</th>
      <th colspan="3"> <div align="center">Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @ledgers.each do |ledger| %>
      <tr>
        <td><%= ledger.name %></td>
        <td><%= link_to 'Show', ledger %></td>
        <td><%= link_to 'Edit', edit_ledger_path(ledger) %></td>
        <td><%= link_to 'Destroy', ledger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ledger', new_ledger_path %>
