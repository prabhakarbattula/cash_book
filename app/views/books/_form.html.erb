<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div class="col-xs-4">

  <form class="form-horizontal">
    <div class="form-group">
        <label for="date" class="control-label col-xs-4">Date :</label>
        <div class="col-xs-8">
            <input type="Date" class="form-control" id="date"
            <%= f.date_field :date %>
        </div>        
    </div>

    <div class="form-group">
        <label for="debit" class="control-label col-xs-4">Debit a/c :</label>
        <div class="col-xs-8">
            <select type="text" class="form-control" id="debit" 
            <%= f.select :debit_id, Ledger.all.collect { |p| [ p.name, p.id] } %>
        </div>
    </div>

    <div class="form-group">
        <label for="credit" class="control-label col-xs-4">Credit a/c :</label>
        <div class="col-xs-8">
            <select type="text" class="form-control" id="credit" 
            <%= f.select :credit_id, Ledger.all.collect { |p| [ p.name, p.id] } %>
        </div>
    </div>
    
    <div class="form-group">
        <label for="amount" class="control-label col-xs-4">Amount :</label>
        <div class="col-xs-8">
            <input type="text" class="form-control" id="amount" 
            <%= f.text_field :amount %>
        </div>
    </div>

    <div class="form-group">
        <label for="remarks" class="control-label col-xs-4">Narration :</label>
        <div class="col-xs-8">
            <input type="text" class="form-control" id="remarks" 
            <%= f.text_field :remark %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-12" align="right">
          <% @status = params[:action]%>
          <% if @status == "edit" %>
              <%= f.submit "Update Transaction", class: "btn btn-success btn-small active" %>
          <% else %>
              <%= f.submit "Create Transaction", class: "btn btn-success btn-small active" %>
          <% end %>
        </div>
    </div>

</form>
</div>

  

<% end %>
